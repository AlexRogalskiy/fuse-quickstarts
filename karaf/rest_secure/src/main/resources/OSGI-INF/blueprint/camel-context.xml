<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws" xmlns:camel="http://camel.apache.org/schema/blueprint"
	xmlns:cxf="http://camel.apache.org/schema/blueprint/cxf" xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
	xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
             http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
             http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
             ">

	<!-- basic auth using karaf users -->
	<bean id="authenticationInterceptor"
		class="org.apache.cxf.interceptor.security.JAASLoginInterceptor">
		<property name="contextName" value="karaf" />
	</bean>

	<!-- The camel context which registers the route -->
	<camel:camelContext id="fusequickstart-cxf-rest-secure"
		xmlns="http://camel.apache.org/schema/blueprint">
		<!-- Package Scanning finds the Routes -->
		<packageScan>
			<package>com.redhat.consulting.fusequickstarts.karaf.rest.secure.route</package>
		</packageScan>
	</camel:camelContext>

	<!-- RS Client for requests to endpoint -->
	<cxf:rsClient id="rsClient" address="http://localhost:8183/secure"
		serviceClass="com.redhat.consulting.fusequickstarts.karaf.rest.secure.resource.MyResource"
		loggingFeatureEnabled="true">
	</cxf:rsClient>

	<!-- RS Service for consuming from the endpoint -->
	<cxf:rsServer id="rsServer" address="http://localhost:8183/secure"
		serviceClass="com.redhat.consulting.fusequickstarts.karaf.rest.secure.resource.MyResource"
		loggingFeatureEnabled="true">
		<cxf:inInterceptors>
			<ref component-id="authenticationInterceptor" />
		</cxf:inInterceptors>
	</cxf:rsServer>

</blueprint>