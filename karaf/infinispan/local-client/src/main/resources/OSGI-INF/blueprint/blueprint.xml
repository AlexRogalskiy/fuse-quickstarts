<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<reference id="cacheManager" interface="org.infinispan.manager.EmbeddedCacheManager" />

	<bean id="localClient"
		class="com.redhat.consulting.fusequickstarts.karaf.infinispan.LocalClient">
		<property name="cacheManager" ref="cacheManager" />
	</bean>

	<camelContext id="remote-producer"
		xmlns="http://camel.apache.org/schema/blueprint">
		<route>
			<from uri="timer://remote?fixedRate=true&amp;period=5000" />
			<to
				uri="bean:localClient?method=process(&#39;PUT&#39;, ${property.CamelTimerCounter}, ${property.CamelTimerFiredTime})" />
		</route>
	</camelContext>
</blueprint>